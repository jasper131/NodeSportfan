            <!-- landing page section -->
            <main>
              <section id="landing-page">
                <div class="container">
                  <div class="row">
                    <div class="col-md-4">
                    
                      {{> sidenav}}
                    
                    </div>
                    <div class="col-md-8">
                      <div class="card p-0">
                        <div class="create-post-h5">
                          <h4 class="color-blue">Create post</h4>
                        </div>
                        <div class="d-flex p-20">
                          <div class="text-center">
                            <img src="/img/21104.svg" class="img-prof">
                          </div>
                          <div class="post-box ml-3">
                            <!-- Button trigger modal -->
                            <button type="button" class="btn btn-default text-left btn-block" data-toggle="modal"
                              data-target="#staticBackdrop">
                              Whats on your mind?
                            </button>
                        
                            <!-- Modal -->
                            <div class="modal fade" id="staticBackdrop" data-backdrop="static" data-keyboard="false" tabindex="-1"
                              role="dialog" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                              <div class="modal-dialog">
                                <div class="modal-content">
                                  <div class="modal-header">
                                    <h5 class="modal-title text-center" id="staticBackdropLabel ">Create
                                      Post</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                      <span aria-hidden="true">&times;</span>
                                    </button>
                                  </div>
                                  <div class="modal-body">
                                    <form action="POST" enctype="multipart/form-data">
            
                                      <div class="form-group green-border-focus">
                                        <textarea type="text" placeholder="Tell us how you feel..." id="postInput" value=""
                                          class="form-control post-input" row="6"></textarea>
                                      </div>
                                      <div class="p-2 text-center">
                                        <input type="file" id="image-upload" accept="audio/*,video/*,image/*"><i class="fa fa-paperclip"></i> Photo/Video
                                      </div>
            
                                    </form>
                                  </div>
                                  <div class="modal-footer">
                                    <button type="button" class="btn btn-primary btn-block" id="sendPost">Post</button>
                                  </div>
                                </div>
                              </div>
                            </div>
            
                          </div>
                        </div>
                      </div>

                      <div id="post-layout"></div>

                      <div class="card mt-5 pd-15">
                        <div class="d-flex justify-content-start">
                          <div>
                            <img src="img/4.jpg" class="img-prof">
                          </div>
                          <div class="ml-2 profile">
                            <h4 class="fan-name">Ogochukwu<span class="fan-fn"> Player</span> <span class="fan-time">10(s) ago</span>
                            </h4>
                            <p class="comment-p">What is the latest today</p>
                            {{!-- ${getMediaType(data)} --}}
                          </div>
                      
                        </div>
                        <div class="tab-content-post">
                          <div class="d-flex justify-content-between">
                            <div class="p-2 text-center">
                              <p><b>144</b> <i class="fa fa-thumbs-up"></i></p>
                            </div>
                            <div class="p-2 text-right">
                              <p><b>44</b> <i class="fa fa-comments"></i> </p>
                            </div>
                          </div>
                          <div class="d-flex justify-content-between m-bd">
                            <p class="p-2 text-center">
                              <i class="fa fa-thumbs-up"></i> Like
                            </p>
                            <p class="p-2 text-right">
                              <i class="fa fa-comments"></i> Comment
                            </p>
                            <p class="p-2 text-right">
                              <i class="fa fa-share-alt"></i> Share
                            </p>
                            <hr>
                          </div>
                          <div class="comment-section" id="comments${data.uuid}">
                            <div class="d-flex justify-content-start mt-3">
                              <div>
                                <img src="img/4.jpg" class="img-prof">
                              </div>
                              <div class="ml-2">
                                <h4 class="fan-name">Solomon<span class="fan-fn"> Player</span> <span class="fan-time">10(s) ago</span></h4>
                                <p class="comment-p">Its worth it</p>
                              </div>
                            
                            </div>
                            <hr>
                          </div>
                          <div class="d-flex justify-content-between mt-4">
                            <div class="text-center">
                              <img src="/img/21104.svg" class="img-prof">
                            </div>
                            <div class=" flex-grow-1 ml-3">
                              <div class="form-group green-border-focus">
                                <input type="text" placeholder="Write comments..." id="${data.uuid}-comment-input"
                                  class="form-control post-input comments">
                                <p class="fa fa-send border-none clip-attach" onclick="commentPost('${data.uuid}')"></p>
                              </div>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
            
              </section>
            </main>