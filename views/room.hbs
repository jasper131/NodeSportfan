{{> header}}


<main>
    {{log  data}}
    <section id="landing-page">
        <div class="container">
            <div class="row">
                <div class="col-md-4">

                    {{> sidenav}}

                </div>
                <div class="col-md-8">
                    <div class="room-profile card mb-5">
                        <div class="room-section">
                            <div class="img-text ">
                                <img src="{{data.room.icon}}" class="img-fluid">
                            </div>
                            <div class="room-info">
                                <h4 class="section-title">{{data.room.name}}</h4>
                                <p>{{data.room.description}}</p>
                                <div class="d-flex justify-content-between">
                                    {{!-- <div>
                                        <span> <b>2234</b> Likes </span>
                                        <span class="pl-3"> <b>2234</b> Views </span>
                                    </div> --}}
                                    <div>
                                        <button class="btn btn-primary" onclick="joinGroup('{{data.room.uuid}}')" id="join-g-btn"
                                            style="">Join</button>
                                        <button class="btn btn-primary"><i class="fa fa-share"></i>Share</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card mt-2">
                        <div class="line-bd"></div>
                        <div class="scrollable-text" id="post-panel">
                        {{#each data.chats}}
                            <div class="comment-bot pd-15">
                                <div class="sender-text">
                                    <p>{{this.sendername}}</p>
                                    <p>{{this.message}}</p>
                                </div>
                            </div>
                        {{/each}}
                            
                        </div>
                        <div class="line-bd"></div>
                        <div class="d-flex  pd-15 justify-content-start">
                            <div class="pd-pos">
                                <a href="#"><i class="fa fa-image"></i></a>
                            </div>
                            <div class="pd-pos">
                                <a href="#"><i class="fa fa-paperclip"></i></a>
                            </div>
                            <form class="form-inline my-2"></form>
                            <div class=" green-border-focus w-100">
                                <input type="search" placeholder="Type..." aria-label="Search"
                                    class="form-control post-input w-100" id="group-chat">
                            </div>

                            <span class="fa fa-1.5x fa-diamond border-none pd-pos room-send" onclick="sendGroupMessage('{{data.room.uuid}}')"></span>
                        </div>


                    </div>
                </div>
            </div>
        </div>

    </section>
</main>